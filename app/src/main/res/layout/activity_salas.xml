<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aplica.andres.adminsqlite.Salas">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SALAS CENTROTIC"
        android:layout_marginTop="30dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/setting"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Nombre De Sala"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="34dp"
        />
<EditText
    android:id="@+id/admin_nombSalas"
    android:layout_marginLeft="34dp"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:hint="Ingrese Campos"
    />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Descripción Sala"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="34dp"
        />
    <EditText
        android:id="@+id/admin_descSalas"
        android:layout_marginLeft="34dp"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese Descripción"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        >
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Crear"
            />
        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="Consultar"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            />
        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            />
    </LinearLayout>

</LinearLayout>
