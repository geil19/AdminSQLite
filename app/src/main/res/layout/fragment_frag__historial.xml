<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aplica.andres.adminsqlite.Frag_Historial"
    android:background="#17A589"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Prestamos"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="40dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="CÃ³digo Prestamo:"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nombre:"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Programa: "
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="HORA INICIO: "
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="HORA FINAL: "
                android:textSize="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/hist_codprest"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:hint="CODIGO_PREST"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/hist_nomb"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="NOMB_EST"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/hist_prog"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="PROG"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/hist_ini"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="DATE_INI"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/hist_fin"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="DATE_FIN"
                android:textSize="16dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
