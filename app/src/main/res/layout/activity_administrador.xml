<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aplica.andres.adminsqlite.Administrador">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODO ADMINISTRADOR"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="50dp"
       >
       <Button
           android:id="@+id/registro"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:background="@drawable/editusu"
           android:layout_marginLeft="10dp"
           />
       <Button
           android:id="@+id/equipos"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:background="@drawable/pc2"
           android:layout_marginLeft="25dp"
           android:layout_marginTop="20dp"
           />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="ESTUDIANTE"
           android:layout_marginLeft="45dp"
           android:textSize="15dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="EQUIPOS"
           android:layout_marginLeft="108dp"
           android:textSize="15dp"
           />

   </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="35dp"
    >
    <Button
        android:id="@+id/sala"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_marginLeft="23dp"
        android:layout_toEndOf="@+id/button9"
        android:background="@drawable/sala"
        android:onClick="salv"
         />

    <Button
        android:id="@+id/prest"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginLeft="43dp"
        android:layout_toEndOf="@+id/button9"
        android:background="@drawable/prest" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALAS"
            android:layout_marginLeft="65dp"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESTAMOS"
            android:layout_marginLeft="110dp"
            android:textSize="15dp"
            />
    </LinearLayout>
</LinearLayout>
