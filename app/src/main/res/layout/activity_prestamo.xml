<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aplica.andres.adminsqlite.Prestamo">
    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRESTAMOS"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Código Prestamo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="75dp"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/admin_codprest"
        android:layout_marginLeft="15dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Llene Los Campos"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Código Estudiante"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/admin_estuPrest"
        android:layout_marginLeft="15dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Llene Los Campos"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Nombre Sala"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/admin_salPrest"
        android:layout_marginLeft="15dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Llene Los Campos"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Serial Equipo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/admin_equPrest"
        android:layout_marginLeft="15dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Llene Los Campos"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        >
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Crear"
            />
        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="Consultar"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            />
        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            />
    </LinearLayout>
</LinearLayout>
