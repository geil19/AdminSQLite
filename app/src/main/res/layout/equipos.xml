<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE EQUIPOS"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:layout_gravity="center"
        />
    <ImageView
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:src="@drawable/pc"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese los campos requeridos*"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        />
    <EditText
        android:id="@+id/serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Serial"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Marca"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/estado"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Estado"
            android:layout_marginTop="15dp"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/internet"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ConexiÃ³n Internet"
            android:inputType="textPersonName"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/registrarequipo"
        android:layout_width="match_parent"

        android:background="#188c74"
        android:text="Registrar Equipo"
        android:layout_height="42dp"
        android:onClick="rEquipos"
        android:textColor="#142b10" />

</LinearLayout>